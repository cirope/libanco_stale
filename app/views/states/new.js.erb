if ($('#modal').length) {
  $('#modal form.new_state').remove();
  $('#modal form').hide();
  $('#modal .modal-title').text('<%= j @title %>');
  $('#modal .modal-body').append('<%= j render('form') %>');
} else {
  $('body').append('<%= j render('shared/modal', title: @title, body: render('form')) %>');
}
$('#modal').modal('show');
