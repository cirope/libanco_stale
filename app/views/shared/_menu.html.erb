<header class="navbar navbar-default navbar-fixed-top" role="banner">
  <div class="container">
    <div class="navbar-header">
      <% if current_user %>
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      <% end %>

      <%= link_to t('app_name'), root_url, class: 'navbar-brand' %>
    </div>

    <% if current_user %>
      <nav class="collapse navbar-collapse" role="navigation">
        <ul class="nav navbar-nav">
          <% if admin_subdomain? %>
            <%= menu_item_for Account, accounts_path %>
          <% else %>
            <%= menu_item_for Schedule, schedules_path %>
            <%= menu_item_for Customer, customers_path %>
            <%= menu_item_for Loan, loans_path %>
            <%= menu_item_controller_for ReportsController, reports_path(filter: 'payments') %>
            <%= render 'shared/submenu/admin' %>
          <% end %>
        </ul>

        <%= render 'shared/user_actions' %>
      </nav>
    <% end %>
  </div>
</header>
